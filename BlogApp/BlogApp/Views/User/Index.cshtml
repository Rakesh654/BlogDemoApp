@model User;
<h1 style="text-align:center">Register</h1>
<div style="width: 50%; margin: 0 25%">
    <form method="post" enctype="multipart/form-data">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" id="name" placeholder="Name..">
        <span asp-validation-for="Name" style="color: red"></span>
        <br/>

        <label asp-for="Email"></label>
        <input asp-for="Email" type="text" id="email" placeholder="Email..">
        <span asp-validation-for="Email" style="color: red"></span>

        <br />
        <label asp-for="Password"></label>
        <input asp-for="Password" type="Password" id="password" placeholder="Password..">
        <span asp-validation-for="Password" style="color: red"></span>

        <br />
        <label>Image</label>
        <input type="file" name="file" />

        <input type="submit" asp-action="Create" value="Submit">
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}