
@model Blog
<div class="alertbox">
    <div class="border: 1px solid black">
        <h1>Are you sure you want to delete the blog</h1>
        <form method="post">
            <input type="submit" asp-route-id="@Model.Id" asp-route-email="@User.Identity.Name" asp-action="Delete" asp-controller="Home" style="background-color: darkred; width:80px" value="Yes">
            <a class="btn-custom" asp-action="ManageBlog" asp-controller="User" style="padding:14px;" asp-route-email="@User.Identity.Name">No</a>
        </form>
    </div>
</div>